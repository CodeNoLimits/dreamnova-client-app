{% comment %}
  Hero section principale - Breslev Books
{% endcomment %}

<section class="hero-breslev">
  <div class="hero-bg" style="background-image: url('{{ section.settings.bg_image | img_url: 'master' }}')">
    <div class="overlay-gradient"></div>
    <div class="container">
      <h1 class="hero-title animate-glow">
        {{ section.settings.title | default: "La Sagesse de Rabbi Nachman" }}
      </h1>
      <p class="hero-subtitle">
        {{ section.settings.subtitle | default: "Découvrez les enseignements qui transforment des vies" }}
      </p>
      <div class="hero-cta">
        <a href="/collections/nouveautes" class="btn btn-primary">
          Découvrir les livres
        </a>
        <a href="/pages/abonnement" class="btn btn-secondary">
          Abonnement illimité
        </a>
      </div>
    </div>
  </div>
</section>

<style>
.hero-breslev {
  position: relative;
  min-height: 80vh;
  display: flex;
  align-items: center;
}

.hero-bg {
  position: absolute;
  inset: 0;
  background-size: cover;
  background-position: center;
}

.overlay-gradient {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg,
    rgba(26, 35, 126, 0.9) 0%,
    rgba(13, 71, 161, 0.8) 100%);
}

.hero-breslev .container {
  position: relative;
  z-index: 2;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  text-align: center;
}

.hero-title {
  font-family: 'Playfair Display', serif;
  font-size: clamp(2rem, 5vw, 3.5rem);
  color: #ffffff;
  text-shadow: 0 0 30px rgba(255, 215, 0, 0.3);
  margin-bottom: 20px;
}

.hero-subtitle {
  font-size: clamp(1rem, 2.5vw, 1.5rem);
  color: #f0f0f0;
  margin-bottom: 40px;
  font-weight: 300;
}

@keyframes glow {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.8; text-shadow: 0 0 40px rgba(255, 215, 0, 0.5); }
}

.animate-glow {
  animation: glow 3s ease-in-out infinite;
}

.hero-cta {
  display: flex;
  gap: 20px;
  justify-content: center;
  flex-wrap: wrap;
}

.hero-breslev .btn {
  padding: 15px 40px;
  border-radius: 30px;
  font-size: 1.1rem;
  font-weight: bold;
  text-decoration: none;
  transition: all 0.3s;
  display: inline-block;
}

.hero-breslev .btn-primary {
  background: #ffd700;
  color: #1a237e;
}

.hero-breslev .btn-primary:hover {
  background: #ffed4e;
  transform: translateY(-2px);
  box-shadow: 0 5px 20px rgba(255, 215, 0, 0.4);
}

.hero-breslev .btn-secondary {
  background: transparent;
  color: #ffffff;
  border: 2px solid #ffffff;
}

.hero-breslev .btn-secondary:hover {
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(-2px);
}

@media (max-width: 768px) {
  .hero-breslev {
    min-height: 60vh;
  }

  .hero-cta {
    flex-direction: column;
    align-items: center;
  }

  .hero-breslev .btn {
    width: 100%;
    max-width: 300px;
  }
}
</style>

{% schema %}
{
  "name": "Hero Breslev",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Image de fond"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titre principal",
      "default": "La Sagesse de Rabbi Nachman"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sous-titre",
      "default": "Découvrez les enseignements qui transforment des vies"
    }
  ],
  "presets": [
    {
      "name": "Hero Breslev"
    }
  ]
}
{% endschema %}
