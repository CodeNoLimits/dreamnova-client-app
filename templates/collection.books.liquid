{% comment %}
  Template collection pour catalogue livres
  Avec filtres et tri
{% endcomment %}

<div class="books-collection-page">
  <div class="collection-header">
    <h1>{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <p class="collection-description">{{ collection.description }}</p>
    {% endif %}
  </div>

  <!-- Filtres et tri -->
  <div class="filters-toolbar">
    <div class="filters-bar">
      <button class="filter-btn active" data-filter="all">
        Tous ({{ collection.products_count }})
      </button>
      <button class="filter-btn" data-filter="books">
        üìö Livres
      </button>
      <button class="filter-btn" data-filter="brochures">
        üìÑ Brochures
      </button>
      <button class="filter-btn" data-filter="digital">
        üíª Num√©riques
      </button>
      <button class="filter-btn" data-filter="physical">
        üìñ Physiques
      </button>
    </div>

    <div class="sort-controls">
      <label for="sort-books">Trier par:</label>
      <select id="sort-books" onchange="sortProducts(this.value)">
        <option value="featured">Mis en avant</option>
        <option value="best-selling">Meilleures ventes</option>
        <option value="title-asc">Titre A ‚Üí Z</option>
        <option value="title-desc">Titre Z ‚Üí A</option>
        <option value="price-asc">Prix croissant</option>
        <option value="price-desc">Prix d√©croissant</option>
        <option value="created-desc">Nouveaut√©s</option>
        <option value="created-asc">Plus anciens</option>
      </select>
    </div>
  </div>

  <!-- Grille de produits -->
  <div class="books-grid" id="products-grid">
    {% for product in collection.products %}
      {% include 'book-card', product: product %}
    {% endfor %}
  </div>

  <!-- Pagination -->
  {% if paginate.pages > 1 %}
    <div class="pagination">
      {% if paginate.previous %}
        <a href="{{ paginate.previous.url }}" class="pagination-btn">
          ‚Üê Pr√©c√©dent
        </a>
      {% endif %}

      {% for part in paginate.parts %}
        {% if part.is_link %}
          <a href="{{ part.url }}" class="pagination-number">
            {{ part.title }}
          </a>
        {% else %}
          <span class="pagination-number active">
            {{ part.title }}
          </span>
        {% endif %}
      {% endfor %}

      {% if paginate.next %}
        <a href="{{ paginate.next.url }}" class="pagination-btn">
          Suivant ‚Üí
        </a>
      {% endif %}
    </div>
  {% endif %}

  <!-- Promotion abonnement -->
  <div class="subscription-promotion">
    <h2>üìö Acc√©dez √† tous les livres num√©riques</h2>
    <p>Avec l'abonnement illimit√©, lisez toute la biblioth√®que pour 29‚Ç¨/mois</p>
    <a href="/pages/abonnement" class="btn-subscribe-promo">
      D√©couvrir l'abonnement
    </a>
  </div>
</div>

{% paginate collection.products by 12 %}
{% endpaginate %}

<script>
// Filtrage produits
document.querySelectorAll('.filter-btn').forEach(btn => {
  btn.addEventListener('click', function() {
    const filter = this.dataset.filter;

    // Mettre √† jour boutons actifs
    document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
    this.classList.add('active');

    // Filtrer produits
    const products = document.querySelectorAll('.book-card');
    products.forEach(product => {
      if(filter === 'all') {
        product.style.display = 'flex';
      } else {
        const categories = product.dataset.category || '';
        if(categories.includes(filter)) {
          product.style.display = 'flex';
        } else {
          product.style.display = 'none';
        }
      }
    });
  });
});

// Tri produits
function sortProducts(sortBy) {
  const grid = document.getElementById('products-grid');
  const products = Array.from(grid.querySelectorAll('.book-card'));

  products.sort((a, b) => {
    switch(sortBy) {
      case 'title-asc':
        return a.querySelector('.book-title').textContent.localeCompare(
          b.querySelector('.book-title').textContent
        );
      case 'title-desc':
        return b.querySelector('.book-title').textContent.localeCompare(
          a.querySelector('.book-title').textContent
        );
      case 'price-asc':
        return parseFloat(a.querySelector('.price-current').textContent.replace(/[^\d.]/g, '')) -
               parseFloat(b.querySelector('.price-current').textContent.replace(/[^\d.]/g, ''));
      case 'price-desc':
        return parseFloat(b.querySelector('.price-current').textContent.replace(/[^\d.]/g, '')) -
               parseFloat(a.querySelector('.price-current').textContent.replace(/[^\d.]/g, ''));
      default:
        return 0;
    }
  });

  // R√©organiser le DOM
  products.forEach(product => grid.appendChild(product));
}
</script>

