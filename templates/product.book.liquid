{% endcomment %}

<div class="product-book-page">
  <div class="product-container">
    <!-- Galerie images -->
    <div class="product-gallery">
      <div class="main-image">
        <img src="{{ product.featured_image | img_url: '800x1200' }}"
             alt="{{ product.title }}"
             id="main-product-image">
      </div>
      {% if product.images.size > 1 %}
        <div class="thumbnail-gallery">
          {% for image in product.images limit: 4 %}
            <img src="{{ image | img_url: '200x300' }}"
                 alt="{{ product.title }}"
                 class="thumbnail {% if forloop.first %}active{% endif %}"
                 onclick="changeMainImage(this.src)">
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <!-- Info produit -->
    <div class="product-info">
      <h1 class="product-title">{{ product.title }}</h1>
      <p class="product-vendor">Par {{ product.vendor }}</p>

      <!-- Prix -->
      <div class="product-pricing">
        {% if product.compare_at_price > product.price %}
          <span class="price-compare">{{ product.compare_at_price | money }}</span>
        {% endif %}
        <span class="price-current">{{ product.price | money }}</span>
      </div>

      <!-- Description courte -->
      <div class="product-description">
        {{ product.description | truncate: 200 }}
      </div>

      <!-- Formulaire achat -->
      <form action="/cart/add" method="post" class="product-form">
        {% if product.variants.size > 1 %}
          <div class="format-selector">
            <label>Format:</label>
            {% for variant in product.variants %}
              <label class="format-option">
                <input type="radio"
                       name="id"
                       value="{{ variant.id }}"
                       {% if forloop.first %}checked{% endif %}>
                <span>{{ variant.title }} - {{ variant.price | money }}</span>
              </label>
            {% endfor %}
          </div>
        {% else %}
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        {% endif %}

        <div class="quantity-selector">
          <label>QuantitÃ©:</label>
          <input type="number" name="quantity" value="1" min="1" max="10">
        </div>

        <button type="submit" class="btn-add-to-cart">
          ðŸ›’ Ajouter au panier
        </button>
      </form>

      <!-- Bundle physique + numÃ©rique -->
      {% if product.metafields.book.bundle_price %}
        <div class="bundle-offer-box">
          <h3>ðŸ’Ž Offre Bundle</h3>
          <p>Livre physique + Version numÃ©rique</p>
          <p class="bundle-price">{{ product.metafields.book.bundle_price | money }}</p>
          <span class="bundle-savings">Ã‰conomisez 15%</span>
          <button class="btn-bundle" onclick="addBundle()">
            Acheter le bundle
          </button>
        </div>
      {% endif %}

      <!-- Protection DRM notice -->
      {% if product.type contains 'digital' %}
        {% include 'drm-protection' %}
      {% endif %}

      <!-- Infos livraison -->
      <div class="shipping-info">
        <h4>ðŸ“¦ Livraison</h4>
        <ul>
          <li>ðŸ‡®ðŸ‡± IsraÃ«l: 25 ILS (gratuit dÃ¨s 200 ILS)</li>
          <li>ðŸ‡«ðŸ‡· France: 8â‚¬ (gratuit dÃ¨s 50â‚¬)</li>
          <li>ðŸ‡¨ðŸ‡¦ Canada: 15 CAD (gratuit dÃ¨s 75 CAD)</li>
          <li>ðŸ“± NumÃ©rique: TÃ©lÃ©chargement immÃ©diat</li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Description complÃ¨te -->
  <div class="product-details">
    <h2>Description complÃ¨te</h2>
    <div class="full-description">
      {{ product.description }}
    </div>
  </div>

  <!-- Produits recommandÃ©s -->
  {% if recommendations.products.size > 0 %}
    <div class="product-recommendations">
      <h2>Vous aimerez aussi</h2>
      <div class="recommendations-grid">
        {% for recommended_product in recommendations.products limit: 4 %}
          {% include 'book-card', product: recommended_product %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
</div>

<script>
function changeMainImage(src) {
  document.getElementById('main-product-image').src = src.replace('200x300', '800x1200');
  document.querySelectorAll('.thumbnail').forEach(t => t.classList.remove('active'));
  event.target.classList.add('active');
}

function addBundle() {
  // Logique pour ajouter le bundle
  alert('Bundle ajoutÃ© au panier!');
}
</script>

