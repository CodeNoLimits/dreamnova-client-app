{% comment %} 
  Espace membre avec biblioth√®que num√©rique
{% endcomment %}

<div class="account-dashboard">
  <div class="welcome-header">
    <h1>Shalom {{ customer.first_name }}!</h1>
    <p>Bienvenue dans votre espace personnel - Esther Ifrah</p>
  </div>
  
  <div class="account-tabs">
    <button class="tab-btn active" data-tab="library">üìö Ma Biblioth√®que</button>
    <button class="tab-btn" data-tab="subscription">üí≥ Mon Abonnement</button>
    <button class="tab-btn" data-tab="orders">üì¶ Mes Commandes</button>
    <button class="tab-btn" data-tab="downloads">‚¨áÔ∏è T√©l√©chargements</button>
    <button class="tab-btn" data-tab="profile">üë§ Mon Profil</button>
  </div>
  
  <!-- Biblioth√®que num√©rique -->
  <div class="tab-content active" id="library">
    <h2>Ma Biblioth√®que Num√©rique</h2>
    
    {% if customer.metafields.subscription.status == 'active' %}
      <div class="subscription-banner success">
        ‚úÖ Abonnement actif - Acc√®s illimit√© jusqu'au {{ customer.metafields.subscription.expires_at | date: '%d/%m/%Y' }}
      </div>
      
      <!-- Tous les livres disponibles -->
      <div class="digital-library">
        {% assign digital_books = collections['livres-numeriques'].products %}
        {% for book in digital_books %}
          <div class="digital-book-card">
            <img src="{{ book.featured_image | img_url: '200x300' }}" alt="{{ book.title }}">
            <h4>{{ book.title }}</h4>
            <div class="book-actions">
              <a href="/pages/reader?book={{ book.handle }}" class="btn-read">
                üìñ Lire en ligne
              </a>
              <button class="btn-download" data-book="{{ book.id }}">
                ‚¨áÔ∏è T√©l√©charger
              </button>
            </div>
            <!-- Progression de lecture -->
            {% assign progress = customer.metafields.reading[book.id].progress | default: 0 %}
            {% if progress > 0 %}
              <div class="reading-progress">
                <div class="progress-bar" style="width: {{ progress }}%"></div>
                <span>{{ progress }}% lu</span>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
      
    {% else %}
      <!-- Livres achet√©s individuellement -->
      <div class="purchased-books">
        <h3>Vos livres achet√©s</h3>
        {% assign has_books = false %}
        {% for order in customer.orders %}
          {% for line_item in order.line_items %}
            {% if line_item.product.type contains 'digital' %}
              {% assign has_books = true %}
              <div class="purchased-book">
                <img src="{{ line_item.product.image | img_url: '100x150' }}" alt="{{ line_item.title }}">
                <div class="book-details">
                  <h4>{{ line_item.title }}</h4>
                  <p>Achet√© le {{ order.created_at | date: '%d/%m/%Y' }}</p>
                  <a href="/pages/reader?book={{ line_item.product.handle }}" class="btn-read-small">
                    Lire
                  </a>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        {% endfor %}
        
        {% unless has_books %}
          <p>Vous n'avez pas encore de livres num√©riques.</p>
          <a href="/collections/livres-numeriques" class="btn-browse">
            D√©couvrir le catalogue
          </a>
        {% endunless %}
      </div>
      
      <!-- Promotion abonnement -->
      <div class="subscription-promo">
        <h3>üéÅ Acc√©dez √† tous les livres!</h3>
        <p>Avec l'abonnement, lisez les 30 titres en illimit√©</p>
        <a href="/pages/abonnement" class="btn-subscribe-now">
          S'abonner √† partir de 29‚Ç¨/mois
        </a>
      </div>
    {% endif %}
  </div>
  
  <!-- Gestion abonnement -->
  <div class="tab-content" id="subscription">
    {% if customer.metafields.subscription.status %}
      <div class="subscription-details">
        <h2>Mon Abonnement</h2>
        <div class="sub-info">
          <p><strong>Type:</strong> {{ customer.metafields.subscription.plan }}</p>
          <p><strong>Statut:</strong> {{ customer.metafields.subscription.status }}</p>
          <p><strong>Prochaine facturation:</strong> {{ customer.metafields.subscription.next_billing | date: '%d/%m/%Y' }}</p>
          <p><strong>Montant:</strong> {{ customer.metafields.subscription.amount | money }}</p>
        </div>
        
        <div class="sub-actions">
          <button class="btn-manage" onclick="if(typeof SkyPilot !== 'undefined') SkyPilot.portal(); else alert('Sky Pilot non charg√©');">
            G√©rer mon abonnement
          </button>
          <button class="btn-cancel" onclick="if(typeof SkyPilot !== 'undefined') SkyPilot.cancel(); else alert('Sky Pilot non charg√©');">
            Annuler l'abonnement
          </button>
        </div>
      </div>
    {% else %}
      <!-- Pas d'abonnement -->
      <div class="no-subscription">
        <h2>Vous n'avez pas d'abonnement actif</h2>
        <p>D√©bloquez l'acc√®s illimit√© √† toute notre biblioth√®que!</p>
        {% section 'subscription-plans' %}
      </div>
    {% endif %}
  </div>
  
  <!-- Mes commandes -->
  <div class="tab-content" id="orders">
    <h2>Mes Commandes</h2>
    {% if customer.orders.size > 0 %}
      <div class="orders-list">
        {% for order in customer.orders %}
          <div class="order-card">
            <div class="order-header">
              <span class="order-number">Commande #{{ order.order_number }}</span>
              <span class="order-date">{{ order.created_at | date: '%d/%m/%Y' }}</span>
            </div>
            <div class="order-total">{{ order.total_price | money }}</div>
            <a href="{{ order.customer_url }}" class="btn-view-order">Voir la commande</a>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p>Aucune commande pour le moment.</p>
    {% endif %}
  </div>
  
  <!-- T√©l√©chargements -->
  <div class="tab-content" id="downloads">
    <h2>Mes T√©l√©chargements</h2>
    <p>Livres num√©riques disponibles au t√©l√©chargement</p>
    <!-- Liste des t√©l√©chargements -->
  </div>
  
  <!-- Profil -->
  <div class="tab-content" id="profile">
    <h2>Mon Profil</h2>
    <form action="/account" method="post">
      <div class="form-group">
        <label>Pr√©nom</label>
        <input type="text" name="customer[first_name]" value="{{ customer.first_name }}">
      </div>
      <div class="form-group">
        <label>Nom</label>
        <input type="text" name="customer[last_name]" value="{{ customer.last_name }}">
      </div>
      <div class="form-group">
        <label>Email</label>
        <input type="email" name="customer[email]" value="{{ customer.email }}">
      </div>
      <button type="submit" class="btn-save">Enregistrer</button>
    </form>
  </div>
</div>

<script>
// Gestion des tabs
document.querySelectorAll('.tab-btn').forEach(btn => {
  btn.addEventListener('click', function() {
    const tabId = this.dataset.tab;
    
    // D√©sactiver tous les tabs
    document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
    document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
    
    // Activer le tab s√©lectionn√©
    this.classList.add('active');
    document.getElementById(tabId).classList.add('active');
  });
});
</script>

