{% comment %}
  Template pour lecture num√©rique en ligne
  Int√®gre FlipHTML5 avec protection DRM
{% endcomment %}

<div id="digital-reader-container" data-book-id="{{ page.metafields.book.id }}">
  <div class="reader-header">
    <div class="reader-title">
      <h1>{{ page.title }}</h1>
      <p class="book-author">{{ page.metafields.book.author }}</p>
    </div>

    <div class="reader-controls">
      <button id="fullscreen-toggle" title="Plein √©cran">
        <span class="icon">‚õ∂</span>
      </button>
      <button id="bookmark-page" title="Marquer cette page">
        <span class="icon">üîñ</span>
      </button>
      <select id="reading-mode" title="Mode de lecture">
        <option value="day">‚òÄÔ∏è Mode jour</option>
        <option value="night">üåô Mode nuit</option>
        <option value="sepia">üìú Mode s√©pia</option>
      </select>
    </div>
  </div>

  {% if customer %}
    <!-- Protection DRM notice -->
    {% include 'drm-protection' %}

    <!-- Lecteur FlipHTML5 -->
    <div id="flipbook-container" class="flipbook-wrapper"></div>

    <!-- Barre de progression -->
    <div class="reading-progress-bar">
      <div class="progress-fill" id="reading-progress"></div>
      <span class="progress-text" id="progress-text">0%</span>
    </div>
  {% else %}
    <!-- Non connect√© -->
    <div class="login-required">
      <h2>Connexion requise</h2>
      <p>Vous devez √™tre connect√© pour lire ce livre.</p>
      <a href="/account/login?return_url={{ request.path | url_encode }}" class="btn-login">
        Se connecter
      </a>
      <p class="signup-link">
        Pas encore de compte? <a href="/account/register">Cr√©er un compte</a>
      </p>
    </div>
  {% endif %}
</div>

<script src="https://online.fliphtml5.com/public/web/viewer/js/pdfflip-embed.js"></script>
<script src="{{ 'fliphtml5-config.js' | asset_url }}"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
  {% if customer %}
    const bookId = document.getElementById('digital-reader-container').dataset.bookId;
    const customerData = {
      email: '{{ customer.email }}',
      name: '{{ customer.name }}',
      id: '{{ customer.id }}',
      subscription: {{ customer.metafields.subscription | json }},
      purchases: []
    };

    // Initialiser lecteur Breslev
    const reader = new BreslevDigitalReader();
    reader.initReader(bookId, customerData);

    // Mode de lecture
    document.getElementById('reading-mode').addEventListener('change', function(e) {
      document.body.className = e.target.value + '-mode';
      localStorage.setItem('readingMode', e.target.value);
    });

    // Charger pr√©f√©rence mode
    const savedMode = localStorage.getItem('readingMode');
    if(savedMode) {
      document.getElementById('reading-mode').value = savedMode;
      document.body.className = savedMode + '-mode';
    }

    // Plein √©cran
    document.getElementById('fullscreen-toggle').addEventListener('click', function() {
      const container = document.getElementById('flipbook-container');
      if(!document.fullscreenElement) {
        container.requestFullscreen();
      } else {
        document.exitFullscreen();
      }
    });

    // Bookmark
    document.getElementById('bookmark-page').addEventListener('click', function() {
      // Logique bookmark √† impl√©menter
      alert('Page marqu√©e!');
    });
  {% endif %}
});
</script>

<style>
#digital-reader-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 20px;
}

.reader-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  background: linear-gradient(135deg, #1a237e 0%, #0d47a1 100%);
  color: white;
  border-radius: 8px 8px 0 0;
  flex-wrap: wrap;
  gap: 20px;
}

.reader-title h1 {
  margin: 0;
  font-size: 1.5rem;
  font-family: 'Playfair Display', serif;
}

.book-author {
  margin: 5px 0 0 0;
  opacity: 0.8;
  font-size: 0.9rem;
}

.reader-controls {
  display: flex;
  gap: 10px;
  align-items: center;
}

.reader-controls button {
  background: rgba(255, 255, 255, 0.2);
  border: none;
  color: white;
  padding: 10px 15px;
  border-radius: 5px;
  cursor: pointer;
  transition: background 0.3s;
}

.reader-controls button:hover {
  background: rgba(255, 255, 255, 0.3);
}

.reader-controls select {
  background: rgba(255, 255, 255, 0.2);
  border: none;
  color: white;
  padding: 10px;
  border-radius: 5px;
  cursor: pointer;
}

.flipbook-wrapper {
  min-height: 600px;
  background: #f5f5f5;
  border-radius: 0 0 8px 8px;
  position: relative;
}

.reading-progress-bar {
  margin-top: 20px;
  height: 30px;
  background: #e0e0e0;
  border-radius: 15px;
  position: relative;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1a237e 0%, #0d47a1 100%);
  transition: width 0.3s;
  width: 0%;
}

.progress-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-weight: bold;
  color: #333;
}

/* Mode nuit */
body.night-mode {
  background: #1a1a1a;
  color: #e0e0e0;
}

body.night-mode .flipbook-wrapper {
  background: #2a2a2a;
}

/* Mode s√©pia */
body.sepia-mode {
  background: #f4ecd8;
  color: #5c4033;
}

body.sepia-mode .flipbook-wrapper {
  background: #e8dcc8;
}

/* Non connect√© */
.login-required {
  text-align: center;
  padding: 100px 20px;
}

.login-required h2 {
  font-family: 'Playfair Display', serif;
  font-size: 2rem;
  color: #1a237e;
  margin-bottom: 20px;
}

.btn-login {
  display: inline-block;
  background: #1a237e;
  color: white;
  padding: 15px 40px;
  border-radius: 30px;
  text-decoration: none;
  font-weight: bold;
  margin-top: 20px;
  transition: all 0.3s;
}

.btn-login:hover {
  background: #0d47a1;
  transform: translateY(-2px);
}

.signup-link {
  margin-top: 20px;
  color: #666;
}

.signup-link a {
  color: #1a237e;
  font-weight: bold;
}

@media (max-width: 768px) {
  .reader-header {
    flex-direction: column;
    text-align: center;
  }

  .reader-controls {
    width: 100%;
    justify-content: center;
    flex-wrap: wrap;
  }

  .flipbook-wrapper {
    min-height: 400px;
  }
}
</style>
