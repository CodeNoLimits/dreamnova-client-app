<style>
/* ============================================
   FOOTER MAIN STYLES
   ============================================ */

.footer-main {
  background-color: var(--color-primary, #1a1a1a);
  color: var(--color-text-inverse, #ffffff);
  margin-top: auto;
}

/* === PARTIE SUPÉRIEURE === */
.footer-top {
  padding: 4rem 0 3rem;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.footer-container {
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 2rem;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 3rem;
}

.footer-col {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.footer-col-newsletter {
  min-width: 280px;
}

/* Titres */
.footer-title {
  font-family: var(--font-heading, 'Playfair Display', serif);
  font-size: 1.125rem;
  font-weight: var(--font-weight-bold, 700);
  color: var(--color-text-inverse, #ffffff);
  margin-bottom: 0.5rem;
}

.footer-description {
  font-size: 0.9375rem;
  line-height: var(--line-height-relaxed, 1.75);
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 1rem;
}

/* Réseaux sociaux */
.footer-social {
  display: flex;
  gap: 1rem;
}

.social-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  color: var(--color-text-inverse, #ffffff);
  transition: all 0.3s ease;
}

.social-link:hover {
  background-color: var(--color-accent, #ef4a21);
  transform: translateY(-3px);
}

/* Liens de navigation */
.footer-links {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.footer-links a {
  font-size: 0.9375rem;
  color: rgba(255, 255, 255, 0.8);
  text-decoration: none;
  transition: color 0.2s ease, transform 0.2s ease;
  display: inline-block;
}

.footer-links a:hover {
  color: var(--color-text-inverse, #ffffff);
  transform: translateX(3px);
}

/* Newsletter */
.newsletter-text {
  font-size: 0.9375rem;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 0.5rem;
}

.newsletter-form {
  margin-top: 1rem;
}

.newsletter-input-group {
  display: flex;
  align-items: stretch;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 0.5rem;
  overflow: hidden;
  border: 2px solid transparent;
  transition: border-color 0.2s ease;
}

.newsletter-input-group:focus-within {
  border-color: var(--color-accent, #ef4a21);
}

.newsletter-input {
  flex: 1;
  padding: 0.875rem 1rem;
  background: transparent;
  border: none;
  color: var(--color-text-inverse, #ffffff);
  font-size: 0.9375rem;
  outline: none;
}

.newsletter-input::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.newsletter-submit {
  padding: 0 1.25rem;
  background-color: var(--color-accent, #ef4a21);
  border: none;
  color: var(--color-text-inverse, #ffffff);
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.newsletter-submit:hover {
  background-color: var(--color-accent-hover, #d43f1c);
}

/* === PARTIE INFÉRIEURE === */
.footer-bottom {
  padding: 2rem 0;
  background-color: rgba(0, 0, 0, 0.3);
}

.footer-bottom-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1.5rem;
  text-align: center;
}

/* Moyens de paiement */
.payment-methods {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-wrap: wrap;
  justify-content: center;
}

.payment-label {
  font-size: 0.875rem;
  color: rgba(255, 255, 255, 0.7);
}

.payment-icons {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.payment-icons img {
  height: 25px;
  width: auto;
  opacity: 0.8;
  transition: opacity 0.2s ease;
}

.payment-icons img:hover {
  opacity: 1;
}

/* Liens légaux */
.footer-legal {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-wrap: wrap;
  justify-content: center;
}

.footer-legal a {
  font-size: 0.875rem;
  color: rgba(255, 255, 255, 0.7);
  text-decoration: none;
  transition: color 0.2s ease;
}

.footer-legal a:hover {
  color: var(--color-text-inverse, #ffffff);
}

.footer-legal .separator {
  color: rgba(255, 255, 255, 0.3);
}

/* Copyright */
.footer-copyright {
  font-size: 0.875rem;
  color: rgba(255, 255, 255, 0.6);
  line-height: var(--line-height-relaxed, 1.75);
}

.footer-credit {
  font-style: italic;
  margin-top: 0.25rem;
}

/* === RESPONSIVE === */
@media (max-width: 1024px) {
  .footer-container {
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .footer-col-newsletter {
    grid-column: 1 / -1;
  }
}

@media (max-width: 768px) {
  .footer-top {
    padding: 3rem 0 2rem;
  }

  .footer-container {
    grid-template-columns: 1fr;
    gap: 2rem;
    padding: 0 1.5rem;
  }

  .footer-col-newsletter {
    grid-column: 1;
  }

  .footer-bottom {
    padding: 1.5rem 0;
  }

  .footer-bottom-content {
    gap: 1rem;
  }

  .payment-methods {
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-legal {
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-legal .separator {
    display: none;
  }
}

@media (max-width: 480px) {
  .footer-container {
    padding: 0 1rem;
  }

  .footer-title {
    font-size: 1rem;
  }

  .footer-description,
  .newsletter-text,
  .footer-links a {
    font-size: 0.875rem;
  }

  .payment-icons {
    flex-wrap: wrap;
  }
}
</style>
