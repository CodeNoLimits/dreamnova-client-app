{% comment %}
  MINI-CART BRESLEV BOOKS
  Panier coulissant avec AJAX
{% endcomment %}

<div class="mini-cart" data-mini-cart>
  <div class="mini-cart__overlay"></div>

  <div class="mini-cart__container">
    <!-- Header -->
    <div class="mini-cart__header">
      <h3 class="mini-cart__title">
        Votre Panier
        <span class="mini-cart__count" data-cart-count>{{ cart.item_count }}</span>
      </h3>
      <button type="button"
              class="mini-cart__close"
              data-cart-toggle
              aria-label="Fermer le panier">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2"/>
        </svg>
      </button>
    </div>

    <!-- Free Shipping Progress -->
    {% if settings.cart_free_shipping_threshold %}
      {% assign threshold = settings.cart_free_shipping_threshold | times: 100 %}
      {% assign remaining = threshold | minus: cart.total_price %}

      <div class="mini-cart__free-shipping">
        <div class="free-shipping-progress">
          <div class="free-shipping-progress__bar">
            {% assign percentage = cart.total_price | times: 100 | divided_by: threshold %}
            {% if percentage > 100 %}{% assign percentage = 100 %}{% endif %}
            <div class="free-shipping-progress__fill"
                 data-free-shipping-progress
                 style="width: {{ percentage }}%"></div>
          </div>
          <p class="free-shipping-progress__text" data-free-shipping-text>
            {% if remaining <= 0 %}
              <span class="success">âœ“ Vous bÃ©nÃ©ficiez de la livraison gratuite!</span>
            {% else %}
              Plus que {{ remaining | money }} pour la livraison gratuite
            {% endif %}
          </p>
        </div>
      </div>
    {% endif %}

    <!-- Cart Items -->
    <div class="mini-cart__items" data-cart-items>
      {% if cart.item_count == 0 %}
        <div class="cart-empty">
          <svg class="cart-empty__icon" width="64" height="64" viewBox="0 0 64 64" fill="none">
            <path d="M8 16L16 8L24 16M16 8V32M40 16L48 8L56 16M48 8V32" stroke="currentColor" stroke-width="2"/>
            <rect x="8" y="32" width="48" height="24" rx="2" stroke="currentColor" stroke-width="2"/>
          </svg>
          <p class="cart-empty__text">Votre panier est vide</p>
          <a href="{{ routes.all_products_collection_url }}" class="btn btn-primary">
            DÃ©couvrir nos livres
          </a>
        </div>
      {% else %}
        {% for item in cart.items %}
          <div class="cart-item" data-cart-item="{{ forloop.index }}">
            <div class="cart-item__image">
              {% if item.image %}
                <img src="{{ item.image | img_url: '100x' }}"
                     alt="{{ item.title }}"
                     loading="lazy"
                     width="80"
                     height="80">
              {% else %}
                <div class="cart-item__image-placeholder">
                  <svg width="80" height="80" viewBox="0 0 80 80">
                    <rect width="80" height="80" fill="#f5f5f5"/>
                    <path d="M30 35L40 25L50 35M40 25V50" stroke="#ccc" stroke-width="2"/>
                  </svg>
                </div>
              {% endif %}
            </div>

            <div class="cart-item__details">
              <h4 class="cart-item__title">{{ item.product.title }}</h4>

              {% unless item.variant.title contains 'Default' %}
                <p class="cart-item__variant">{{ item.variant.title }}</p>
              {% endunless %}

              {% comment %} Product Properties {% endcomment %}
              {% if item.properties %}
                <div class="cart-item__properties">
                  {% for property in item.properties %}
                    {% unless property.first contains '_' %}
                      <div class="cart-item__property">
                        <span>{{ property.first }}:</span> {{ property.last }}
                      </div>
                    {% endunless %}
                  {% endfor %}
                </div>
              {% endif %}

              <div class="cart-item__price-row">
                {% if item.original_line_price != item.final_line_price %}
                  <span class="cart-item__original-price">
                    {{ item.original_line_price | money }}
                  </span>
                {% endif %}
                <span class="cart-item__price">
                  {{ item.final_line_price | money }}
                </span>
              </div>

              {% comment %} Discounts {% endcomment %}
              {% if item.line_level_discount_allocations.size > 0 %}
                <div class="cart-item__discounts">
                  {% for discount in item.line_level_discount_allocations %}
                    <span class="cart-item__discount">
                      ðŸŽ‰ {{ discount.discount_application.title }}
                      (-{{ discount.amount | money }})
                    </span>
                  {% endfor %}
                </div>
              {% endif %}
            </div>

            <div class="cart-item__quantity">
              <input type="number"
                     class="cart-item__quantity-input"
                     value="{{ item.quantity }}"
                     min="0"
                     max="99"
                     data-cart-update-qty="{{ forloop.index }}"
                     aria-label="QuantitÃ© pour {{ item.title }}">
            </div>

            <button type="button"
                    class="cart-item__remove"
                    data-cart-remove="{{ forloop.index }}"
                    aria-label="Retirer {{ item.title }}">
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M12 4L4 12M4 4L12 12" stroke="currentColor" stroke-width="2"/>
              </svg>
            </button>
          </div>
        {% endfor %}
      {% endif %}
    </div>

    <!-- Cart Footer -->
    {% if cart.item_count > 0 %}
      <div class="mini-cart__footer">
        <!-- Cart Note (optional) -->
        {% if settings.cart_notes_enabled %}
          <div class="mini-cart__note">
            <label for="cart-note" class="mini-cart__note-label">
              Instructions spÃ©ciales
            </label>
            <textarea id="cart-note"
                      name="note"
                      class="mini-cart__note-input"
                      placeholder="Ajouter une note Ã  votre commande (optionnel)">{{ cart.note }}</textarea>
          </div>
        {% endif %}

        <!-- Subtotal -->
        <div class="mini-cart__subtotal">
          <span class="mini-cart__subtotal-label">Sous-total</span>
          <span class="mini-cart__subtotal-amount" data-cart-total>
            {{ cart.total_price | money }}
          </span>
        </div>

        <!-- Cart Discounts -->
        {% if cart.cart_level_discount_applications.size > 0 %}
          <div class="mini-cart__discounts">
            {% for discount in cart.cart_level_discount_applications %}
              <div class="mini-cart__discount">
                <span>ðŸŽ‰ {{ discount.title }}</span>
                <span>-{{ discount.total_allocated_amount | money }}</span>
              </div>
            {% endfor %}
          </div>
        {% endif %}

        <!-- Shipping Notice -->
        <p class="mini-cart__shipping-notice">
          Livraison et taxes calculÃ©es au paiement
        </p>

        <!-- Action Buttons -->
        <div class="mini-cart__actions">
          <a href="{{ routes.cart_url }}" class="btn btn-secondary btn-full">
            Voir le panier
          </a>
          <button type="submit"
                  class="btn btn-primary btn-full"
                  name="checkout"
                  form="mini-cart-form">
            Passer commande
          </button>
        </div>

        <!-- Trust Badges -->
        <div class="mini-cart__trust">
          <div class="trust-badge">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M8 2L10 6L14 6.5L11 9.5L12 14L8 12L4 14L5 9.5L2 6.5L6 6L8 2Z"
                    fill="currentColor"/>
            </svg>
            <span>Paiement sÃ©curisÃ©</span>
          </div>
          <div class="trust-badge">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M8 2L2 5V8C2 11 8 14 8 14C8 14 14 11 14 8V5L8 2Z"
                    stroke="currentColor" stroke-width="1.5"/>
            </svg>
            <span>Livraison rapide</span>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<!-- Hidden form for checkout -->
<form id="mini-cart-form" action="{{ routes.cart_url }}" method="post">
  <input type="hidden" name="checkout">
</form>

<style>
.mini-cart {
  position: fixed;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  pointer-events: none;
}

.mini-cart.is-active {
  pointer-events: all;
}

.mini-cart__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.mini-cart.is-active .mini-cart__overlay {
  opacity: 1;
}

.mini-cart__container {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  max-width: 420px;
  height: 100%;
  background: #fff;
  box-shadow: -2px 0 8px rgba(0, 0, 0, 0.1);
  transform: translateX(100%);
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
}

.mini-cart.is-active .mini-cart__container {
  transform: translateX(0);
}

.mini-cart__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
  border-bottom: 1px solid #e5e5e5;
}

.mini-cart__title {
  margin: 0;
  font-size: 1.25rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.mini-cart__count {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 24px;
  height: 24px;
  padding: 0 8px;
  background: var(--color-primary, #2C5F2D);
  color: white;
  border-radius: 12px;
  font-size: 0.875rem;
  font-weight: 600;
}

.mini-cart__close {
  background: none;
  border: none;
  padding: 0.5rem;
  cursor: pointer;
  color: #666;
  transition: color 0.2s;
}

.mini-cart__close:hover {
  color: #000;
}

.mini-cart__items {
  flex: 1;
  overflow-y: auto;
  padding: 1rem;
}

.cart-item {
  display: grid;
  grid-template-columns: 80px 1fr 60px 24px;
  gap: 1rem;
  padding: 1rem 0;
  border-bottom: 1px solid #f0f0f0;
}

.cart-item__image img {
  width: 80px;
  height: 80px;
  object-fit: cover;
  border-radius: 4px;
}

.cart-item__title {
  margin: 0 0 0.25rem;
  font-size: 0.95rem;
  font-weight: 600;
  line-height: 1.3;
}

.cart-item__variant,
.cart-item__property {
  font-size: 0.85rem;
  color: #666;
  margin: 0.25rem 0;
}

.cart-item__price-row {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-top: 0.5rem;
}

.cart-item__price {
  font-weight: 600;
  color: var(--color-primary, #2C5F2D);
}

.cart-item__original-price {
  font-size: 0.85rem;
  color: #999;
  text-decoration: line-through;
}

.cart-item__quantity-input {
  width: 60px;
  padding: 0.5rem;
  text-align: center;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.cart-item__remove {
  background: none;
  border: none;
  padding: 0.25rem;
  cursor: pointer;
  color: #999;
  transition: color 0.2s;
}

.cart-item__remove:hover {
  color: #e74c3c;
}

.cart-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 3rem 1rem;
  text-align: center;
}

.cart-empty__icon {
  color: #ddd;
  margin-bottom: 1rem;
}

.cart-empty__text {
  color: #666;
  margin-bottom: 1.5rem;
}

.mini-cart__footer {
  padding: 1.5rem;
  border-top: 1px solid #e5e5e5;
  background: #fafafa;
}

.mini-cart__subtotal {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 1.125rem;
  font-weight: 600;
  margin-bottom: 1rem;
}

.mini-cart__shipping-notice {
  font-size: 0.85rem;
  color: #666;
  text-align: center;
  margin: 0.5rem 0 1rem;
}

.mini-cart__actions {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.mini-cart__trust {
  display: flex;
  justify-content: space-around;
  margin-top: 1rem;
  padding-top: 1rem;
  border-top: 1px solid #e5e5e5;
}

.trust-badge {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.85rem;
  color: #666;
}

.free-shipping-progress {
  padding: 0.75rem 1rem;
  background: #f8f9fa;
  border-radius: 8px;
  margin-bottom: 1rem;
}

.free-shipping-progress__bar {
  width: 100%;
  height: 6px;
  background: #e5e5e5;
  border-radius: 3px;
  overflow: hidden;
  margin-bottom: 0.5rem;
}

.free-shipping-progress__fill {
  height: 100%;
  background: var(--color-accent, #FFD700);
  transition: width 0.3s ease;
}

.free-shipping-progress__text {
  font-size: 0.85rem;
  color: #666;
  margin: 0;
  text-align: center;
}

.free-shipping-progress__text .success {
  color: #27ae60;
  font-weight: 600;
}

@media (max-width: 768px) {
  .mini-cart__container {
    max-width: 100%;
  }
}
</style>
