  "metafields": {
    "products": {
      "namespace": "book",
      "definition": [
        {
          "key": "has_digital",
          "type": "boolean",
          "description": "Indicate if product has a digital version available",
          "validations": {
            "required": false
          }
        },
        {
          "key": "bundle_price",
          "type": "money",
          "description": "Special pricing for physical + digital bundle",
          "validations": {
            "required": false,
            "minimum": 0
          }
        },
        {
          "key": "author",
          "type": "single_line_text_field",
          "description": "Book author name",
          "validations": {
            "required": false,
            "maxLength": 255
          }
        },
        {
          "key": "pages",
          "type": "number_integer",
          "description": "Total number of pages",
          "validations": {
            "required": false,
            "minimum": 1
          }
        },
        {
          "key": "language",
          "type": "single_line_text_field",
          "description": "Language code (FR, HE, EN, BI for bilingual)",
          "validations": {
            "required": false,
            "enum": ["FR", "HE", "EN", "BI"]
          }
        },
        {
          "key": "category",
          "type": "single_line_text_field",
          "description": "Book category for internal organization",
          "validations": {
            "required": false,
            "maxLength": 100
          }
        },
        {
          "key": "isbn",
          "type": "single_line_text_field",
          "description": "International Standard Book Number",
          "validations": {
            "required": false,
            "maxLength": 20
          }
        },
        {
          "key": "pdf_url",
          "type": "url",
          "description": "Secure URL to PDF file (for digital product)",
          "validations": {
            "required": false
          }
        },
        {
          "key": "fliphtml5_id",
          "type": "single_line_text_field",
          "description": "FlipHTML5 publication ID for online reading experience",
          "validations": {
            "required": false,
            "maxLength": 100
          }
        }
      ]
    },
    "customers": {
      "namespace": "subscription",
      "definition": [
        {
          "key": "status",
          "type": "single_line_text_field",
          "description": "Subscription status (active, cancelled, expired, pending)",
          "validations": {
            "required": false,
            "enum": ["active", "cancelled", "expired", "pending"]
          }
        },
        {
          "key": "plan",
          "type": "single_line_text_field",
          "description": "Subscription plan type (monthly, yearly, lifetime)",
          "validations": {
            "required": false,
            "enum": ["monthly", "yearly", "lifetime"]
          }
        },
        {
          "key": "expires_at",
          "type": "date",
          "description": "Subscription expiration date",
          "validations": {
            "required": false
          }
        },
        {
          "key": "next_billing",
          "type": "date",
          "description": "Next billing date for subscription",
          "validations": {
            "required": false
          }
        },
        {
          "key": "amount",
          "type": "money",
          "description": "Subscription payment amount",
          "validations": {
            "required": false,
            "minimum": 0
          }
        }
      ]
    }
  },

