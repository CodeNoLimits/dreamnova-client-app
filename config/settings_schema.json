      {
        "type": "color",
        "id": "color_secondary",
        "label": "Couleur secondaire",
        "default": "#97BC62"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Couleur accent",
        "default": "#FFD700"
