        "type": "text",
        "id": "social_twitter",
        "label": "Twitter/X",
        "info": "https://twitter.com/votreprofil"
      },
      {
        "type": "text",
        "id": "social_whatsapp",
        "label": "WhatsApp",
        "info": "Numéro de téléphone avec indicatif (ex: +33612345678)"
