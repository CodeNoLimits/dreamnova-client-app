  {
    "name": "Apps et Intégrations",
    "settings": [
      {
        "type": "header",
        "content": "FlipHTML5 (Lecteur Numérique)"
      },
      {
        "type": "text",
        "id": "fliphtml5_api_key",
        "label": "Clé API FlipHTML5",
        "info": "Disponible dans votre compte FlipHTML5"
      },
      {
        "type": "text",
        "id": "fliphtml5_account_id",
        "label": "ID de compte FlipHTML5"
      },
      {
        "type": "header",
        "content": "LemonInk (DRM Watermarking)"
      },
      {
        "type": "text",
        "id": "lemonink_api_key",
        "label": "Clé API LemonInk",
        "info": "Pour le watermarking des PDF"
      },
      {
        "type": "header",
        "content": "Sky Pilot (Abonnements)"
      },
      {
        "type": "checkbox",
        "id": "skypilot_enabled",
        "label": "Activer Sky Pilot",
        "default": true,
        "info": "Géré automatiquement par l'app"
      },
      {
        "type": "header",
        "content": "Google Analytics"
      },
      {
        "type": "text",
        "id": "google_analytics_id",
        "label": "ID Google Analytics",
        "info": "Format: G-XXXXXXXXXX"
      },
      {
        "type": "header",
        "content": "Meta Pixel (Facebook)"
      },
      {
        "type": "text",
        "id": "facebook_pixel_id",
        "label": "ID Facebook Pixel"
      }
    ]
  },
  {
    "name": "Panier et Checkout",
    "settings": [
      {
        "type": "checkbox",
        "id": "cart_ajax_enabled",
        "label": "Panier AJAX (sans rechargement)",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "cart_notes_enabled",
        "label": "Permettre les notes de commande",
        "default": true
      },
      {
        "type": "text",
        "id": "cart_free_shipping_threshold",
        "label": "Montant pour livraison gratuite (EUR)",
        "default": "50",
        "info": "Laisser vide pour désactiver"
      },
      {
        "type": "textarea",
        "id": "cart_terms_conditions",
        "label": "Conditions générales de vente",
        "info": "Affiché au checkout"
      }
    ]
  },
  {
    "name": "Multi-Devises",
    "settings": [
      {
        "type": "checkbox",
        "id": "multi_currency_enabled",
        "label": "Activer le multi-devises",
        "default": true
      },
      {
        "type": "text",
        "id": "currencies_available",
        "label": "Devises disponibles",
        "default": "EUR,USD,ILS,CAD",
        "info": "Séparées par des virgules. EUR doit être en premier."
      },
      {
        "type": "select",
        "id": "currency_format",
        "label": "Format d'affichage",
        "options": [
          { "value": "amount_with_comma_separator", "label": "1.234,56 €" },
          { "value": "amount_with_period_and_space_separator", "label": "1 234.56 €" },
          { "value": "amount_no_decimals", "label": "1 235 €" }
        ],
        "default": "amount_with_comma_separator"
      }
    ]
  },
  {
    "name": "Performance et SEO",
    "settings": [
      {
        "type": "checkbox",
        "id": "lazy_loading_enabled",
        "label": "Activer le lazy loading des images",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "preload_fonts",
        "label": "Précharger les polices",
        "default": true
      },
      {
        "type": "textarea",
        "id": "custom_head_scripts",
        "label": "Scripts personnalisés dans <head>",
        "info": "Pour les outils d'analyse tiers"
      },
      {
        "type": "textarea",
        "id": "custom_footer_scripts",
        "label": "Scripts personnalisés avant </body>",
        "info": "Pour les chatbots, etc."
      }
    ]
  },
  {
    "name": "Notifications et Messages",
    "settings": [
      {
        "type": "header",
        "content": "Messages de notification"
      },
      {
        "type": "text",
        "id": "notification_added_to_cart",
